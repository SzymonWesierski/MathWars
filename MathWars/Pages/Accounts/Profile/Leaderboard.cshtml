@page
@model MathWars.Pages.Accounts.Profile.LeaderboardModel
@{
}

<link rel="stylesheet" href="~/css/Leaderboard.css" asp-append-version="true" />

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Leaderboard</h2>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Position
				</th>
				<th>
					User
				</th>
				<th>
					Level
				</th>
				<th>
					Experience
				</th>
			</tr>
		</thead>
		<tbody>
			@if (Model.Users != null)
			{
				int i = 1;
				@foreach (var obj in Model.Users)
				{
					<tr>
						<td width="10%">#@i</td>
						<td width="30%">
							@if (i == 1)
							{
								<i class="bi bi-trophy-fill gold-icon"></i> <!-- Przykładowa ikona dla 1. miejsca -->
							}
							else if (i == 2)
							{
								<i class="bi bi-trophy silver-icon"></i> <!-- Przykładowa ikona dla 2. miejsca -->
							}
							else if (i == 3)
							{
								<i class="bi bi-trophy bronze-icon"></i> <!-- Przykładowa ikona dla 3. miejsca -->
							}
							@obj.UserName
						</td>
						<td width="30%">@obj.Level</td>
						<td width="30%">@obj.Experience</td>
					</tr>
					i++;
				}
			}
		</tbody>
	</table>


</div>