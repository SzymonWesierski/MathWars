@page
@model MathWars.Pages.Reports.ReportBugInTaskModel
@{
}

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="border p-3 mt-4">
            <input asp-for="@Model.UserReport.TaskId" hidden />
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Zgłoś błąd w zadaniu, który napotkałeś/aś</h2>
                <hr />
            </div>
            <div class="mb-3">
                <h5><label asp-for="@Model.UserReport.Title"></label></h5>
                <input asp-for="@Model.UserReport.Title" class="form-control" />
                <span asp-validation-for="@Model.UserReport.Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <h5><label asp-for="@Model.UserReport.Description"></label></h5>
                <textarea asp-for="@Model.UserReport.Description" class="form-control"></textarea>
                <span asp-validation-for="@Model.UserReport.Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.UserReport.ImageUrl"></label>
                <input type="file" accept="image/*" asp-for="@Model.ImageFile" class="form-control" />
            </div>
            <p>Z góry dziękujemy za wspieranie w rozwoju MathWars : )</p>
            <button type="submit" class="btn btn-primary" style="width:150px;">Wyślij</button>
            <a asp-page="/TaskPages/SolvingTask" asp-route-id="@Model.UserReport.TaskId" class="btn btn-secondary" style="width:150px;">Powrót</a>
        </div>
    </form>
</div>