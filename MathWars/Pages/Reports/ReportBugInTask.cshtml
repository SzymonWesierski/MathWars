@page
@model MathWars.Pages.Reports.ReportBugInTaskModel
@{
}

<div class="container">
    <form method="post">
        <div class="border p-3 mt-4">
            <input asp-for="@Model.TaskId" hidden></input>
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Zgłoś błąd w zadaniu, który napotkałeś/aś</h2>
                <hr />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <h5><label asp-for="@Model.EmailContent"></label></h5>
                <textarea asp-for="@Model.EmailContent" class="form-control" ></textarea>
                <span asp-validation-for="@Model.EmailContent"></span>
            </div>
            <p>Z góry dziękujemy za wspieranie w rozwoju MathWars : )</p>
            <button type="submit" class="btn btn-primary" style="width:150px;">Wyślij</button>
            <a asp-page="/TaskPages/SolvingTask" asp-route-id="" class="btn btn-secondary" style="width:150px;">Powrót</a>
        </div>
    </form>
</div>