@page
@model MathWars.Pages.TaskPages.SolvingTaskModel
@{
}


<link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/SolvingTask.css" asp-append-version="true" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
@{
    if (@Model.AnswerResult != null)
    {
        <script type="text/javascript">
            $(function () {
                $("#aModal").modal('show');
            })
        </script>
    }
}


<div class="container">
    <div class="row pb-2">
        <h2 class="text-primary pl-3">Rozwiąż zadanie</h2>
    </div>
    <div class="mb-3">
        <strong>Tytuł:</strong>
        <p class="mb-0"> @Model.Task.Title</p>
    </div>
 
    
  
    <div class="mb-3">
        <strong>Treść:</strong>
        <p class="mb-0"> @Model.Task.Content</p>
    </div>


    <!-- Drawing area -->
    <canvas id="drawingCanvas" width="900" height="400" style="border:1px solid #000; background-color: white;"></canvas>
    <div>
        <button id="brushBtn" class="btn btn-info" style="width:100px;">
            <i class="bi bi-brush"></i>
        </button>
        <button id="eraserBtn" class="btn btn-warning" style="width:100px;">
            <i class="bi bi-eraser"></i>
        </button>
        <button id="clearCanvasBtn" class="btn btn-danger" style="width:150px;">
            <i class="bi bi-trash"></i>
        </button>
    </div>


    @{
        if (Model.Task.ImagePath != "")
        {
            <div class="mb-3">
                <img width="50%" src="@Url.Content(Model.Task.ImagePath)" alt="Optional Image for Task " class="task-image" />
            </div>
        }
    }
 
    <div class="mb-3">
    <form method="post">
        <input type="hidden" asp-for="@Model.Task.Id" />

        <!--<div asp-validation-summary="All"></div>-->
        Odpowiedź (@Model.Task.AnswerType.FormatExplanation):
        @for (int i = 0; i < Model.Task.AnswerType.HowManyCorrectAnswers; i++)
        {
                <input asp-for="@Model.AnswersList[i]" class="form-control" />
                <span asp-validation-for="@Model.AnswersList[i]" class="text-danger"></span>
        }

        <br/>

        <button type="submit" class="btn btn-primary" style="width:150px;">Sprawdź</button>
        <a asp-page="/Index" class="btn btn-secondary" style="width:150px;">Powrót do strony głównej</a>
        
    </form>
    </div>
    @*modal*@
    @if (Model.AnswerResult == true)
    {
        <div class="modal fade" id="aModal" tabindex="-1" role="dialog" aria-labelledby="aModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="aModalLabel">Gratulacje</h4>
                    </div>
                    <div class="modal-body">
                        Udało Ci się poprawnie rozwiązać zadanie : ) 
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }


</div>

<script src="~/js/Drawing.js"></script>