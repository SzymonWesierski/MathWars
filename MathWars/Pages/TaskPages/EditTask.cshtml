@page
@model EditTaskModel
@{
}


<div class="container">
<form method="post">
    <input hidden asp-for="Task.Id" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">

            <h2 class="text-primary pl-3">Edit Task</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            Title:
            <input asp-for="@Model.Task.Title" class="form-control" />
            <span asp-validation-for="@Model.Task.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            Content:
            <input asp-for="@Model.Task.Content" class="form-control" />
            <span asp-validation-for="@Model.Task.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            Category:
                <select asp-for="@Model.Task.Category.Id" asp-items="@(new SelectList(Model.categorys, "Id", "CategoryName"))" class="form-control">
                    <option value="">-- Select Category --</option>
                </select>
            <span asp-validation-for="@Model.Task.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            Difficulty level:
            <input asp-for="@Model.Task.difficultyLevel" class="form-control" />
            <span asp-validation-for="@Model.Task.Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            Correct Answer:
            <input asp-for="@Model.Task.Answer" class="form-control" />
            <span asp-validation-for="@Model.Task.Answer" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
        <a asp-page="ViewTasks" class="btn btn-secondary" style="width:150px;">Back to list</a>
    </div>
</form>
</div>